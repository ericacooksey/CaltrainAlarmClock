<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_button_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/alarm_button"
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:layout_gravity="end|bottom"
        android:gravity="end|bottom"
        android:layout_marginBottom="@dimen/round_button_margin"
        android:layout_marginEnd="@dimen/round_button_margin"
        android:tint="@color/caltrain_red"
        android:elevation="@dimen/elevation_low"
        android:background="@drawable/button_ripple"
        android:stateListAnimator="@anim/button_elevation"></ImageButton>
</RelativeLayout>